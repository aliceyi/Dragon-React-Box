{
    "command": {
        "bootstrap": {
            "ignore": "components-*",
            "npmClientArgs": ["--no-package-lock"]
        },
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": ["*.md"],
            "registry": "https://registry.npmjs.org/"
        }
    },
    "npmClient": "yarn",
    "packages": ["packages/*"],
    "version": "independent",
    "useWorkspaces": true
}
