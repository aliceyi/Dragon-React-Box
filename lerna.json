{
    "command": {
        "bootstrap": {
            "ignore": "components-*",
            "npmClientArgs": ["--no-package-lock"]
        },
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": ["*.md", "**/__test__/**"],
            "registry": "https://artifacts-we1.farfetch.net/artifactory/api/npm/farfetch-npm-stable-we1/",
            "message": "chore(release): publish %s"
        }
    },
    "npmClient": "yarn",
    "packages": ["packages/*"],
    "version": "independent",
    "useWorkspaces": true
}
