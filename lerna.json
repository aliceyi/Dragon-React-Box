{
    "command": {
        "bootstrap": {
            "ignore": "components-*",
            "npmClientArgs": ["--no-package-lock"]
        },
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": ["*.md", "**/__test__/**"],
            "registry": "https://npm.pkg.github.com",
            "message": "chore(release): publish %s"
        }
    },
    "npmClient": "yarn",
    "packages": ["packages/*"],
    "version": "independent",
    "useWorkspaces": true
}
