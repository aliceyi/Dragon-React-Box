{
  "name": "@farfetch/dragon-react-box",
  "version": "0.1.0",
  "description": "Website UI Library",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "Component",
    "UI",
    "React"
  ],
  "publishConfig": {
    "registry": "https://artifacts-we1.farfetch.net/artifactory/api/npm/farfetch-npm-beta-we1/"
  },
  "dependencies": {
    "antd-mobile": "^2.3.3",
    "classnames": "^2.2.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "clean": "rimraf ./dist",
    "lint": "eslint --ext js,ts,tsx src",
    "build": "yarn run clean && yarn run build-ts && yarn run build-css",
    "test": "react-app-rewired test",
    "test:nowatch": "cross-env CI=true react-app-rewired test",
    "eject": "react-scripts eject",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-css": "node-sass ./src/styles/index.scss ./dist/index.css",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "prepublishOnly": "yarn run test:nowatch && yarn run lint && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.fftech.info:dragon/consumer-web/dragon-react-box.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test:nowatch && yarn run lint"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/node-logger": "^6.0.26",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.26",
    "@types/classnames": "^2.2.10",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "react-is": "^16.13.1",
    "rimraf": "^3.0.2",
    "node-sass": "^4.14.1",
    "react-app-rewired": "^2.1.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.2",
    "customize-cra": "^1.0.0",
    "babel-plugin-import": "^1.13.0"
  }
}
